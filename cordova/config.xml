<?xml version='1.0' encoding='utf-8'?>
<widget id="ch.becompany.news" version="1.0.0" xmlns="http://www.w3.org/ns/widgets"
        xmlns:cdv="http://cordova.apache.org/ns/1.0">
  <name>BeCompany news</name>
  <description>
    A sample Apache Cordova application that reads news feeds.
  </description>
  <author email="gabo.menacho@gmail.com" href="https://becompany.ch">
    BeCompany GmbH
  </author>
  <content src="index.html"/>
  <!--<plugin name="cordova-plugin-whitelist" spec="1"/>-->
  <plugin name="cordova-plugin-whitelist" spec="~1.3.0" />
  <plugin name="cordova-plugin-splashscreen" spec="~4.0.0" />
  <!-- Configure the splashscreen. -->
  <preference name="SplashShowOnlyFirstTime" value="false" />
  <preference name="ShowSplashScreenSpinner" value="false"/>
  <access origin="*"/>
  <allow-intent href="http://*/*"/>
  <allow-intent href="https://*/*"/>
  <allow-intent href="tel:*"/>
  <allow-intent href="sms:*"/>
  <allow-intent href="mailto:*"/>
  <allow-intent href="geo:*"/>
  <platform name="android">
    <allow-intent href="market:*"/>
    <icon density="hdpi" src="res/icon/android/icon-hdpi.png"/>
    <icon density="ldpi" src="res/icon/android/icon-ldpi.png"/>
    <icon density="mdpi" src="res/icon/android/icon-mdpi.png"/>
    <icon density="xhdpi" src="res/icon/android/icon-xhdpi.png"/>
    <splash density="land-hdpi" src="res/screen/android/screen-land-hdpi.png"/>
    <splash density="land-ldpi" src="res/screen/android/screen-land-ldpi.png"/>
    <splash density="land-mdpi" src="res/screen/android/screen-land-mdpi.png"/>
    <splash density="land-xhdpi" src="res/screen/android/screen-land-xhdpi.png"/>
    <splash density="port-hdpi" src="res/screen/android/screen-port-hdpi.png"/>
    <splash density="port-ldpi" src="res/screen/android/screen-port-ldpi.png"/>
    <splash density="port-mdpi" src="res/screen/android/screen-port-mdpi.png"/>
    <splash density="port-xhdpi" src="res/screen/android/screen-port-xhdpi.png"/>
  </platform>
  <platform name="ios">
    <allow-intent href="itms:*"/>
    <allow-intent href="itms-apps:*"/>
  </platform>
  <!-- Build and prepare the Angular 2 application. -->
  <hook type="before_prepare" src="scripts/prepareAngular2App.js"/>
</widget>

